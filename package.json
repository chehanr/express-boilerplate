{
  "name": "express-boilerplate",
  "version": "0.0.1",
  "main": "./src/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "tsc --build --clean",
    "dev": "NODE_ENV=dev ts-node-dev ./src/index.ts",
    "start": "node ./dist/index.js",
    "test:unit": "NODE_ENV=test mocha -r ts-node/register './test/unit/**/*.test.ts'",
    "test:integration": "NODE_ENV=test mocha -r ts-node/register './test/integration/**/*.test.ts'"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "fp-ts": "^2.14.0",
    "zod": "^3.21.4"
  },
  "engines": {
    "npm": "<=9.5.0",
    "node": "<=18.15.0"
  }
}
